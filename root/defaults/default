server {
    listen 80 default_server;
    listen 443 ssl;

    server_name _;

    ssl_certificate /config/keys/cert.crt;
    ssl_certificate_key /config/keys/cert.key;

    root /app/src/public;
    index index.html index.htm index.php;

    # Set charset to UTF-8
    charset utf-8;

    # Log to stdout for Docker
    access_log /dev/stdout;
    error_log /dev/stderr error;

    client_max_body_size 0;

    # Set index and 404
    index index.php index.php;
    error_page 404 /index.php;

    # Add security headers
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";

    # Send all requests to index.php
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Ignore favicon.ico logging
    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    # Ignore robots.txt logging
    location = /robots.txt  {
        access_log off;
        log_not_found off;
    }

    # Deny access to any files or folders beginning with dot
    location ~ /\. {
        access_log off;
        log_not_found off;
        deny all;
    }

    # Route PHP requests to PHP-FPM
    location ~ \.php$ {
        fastcgi_index index.php;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass 127.0.0.1:9000;
        include /etc/nginx/fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param SCRIPT_NAME $fastcgi_script_name;
        
        # kill cache
        add_header Last-Modified $date_gmt;
        add_header Cache-Control 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
        if_modified_since off;
        expires off;
        etag off;
    }

    # Add cache headers to assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|eot|ttf|woff|woff2)$ {
        try_files $uri /index.php?$query_string;
        expires 7d;
        add_header Pragma "public";
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
        add_header Access-Control-Allow-Origin *;
    }
}